{
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
      "target": "es5",
      "allowJs": true,
      "skipLibCheck": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react",
      "noImplicitAny": false,
      "lib": [
        "dom",
        "dom.iterable",
        "es2017"
      ],
      "typeRoots": [
        "./types",
        "./node_modules/@types"
      ]
    },
    "include": [
        "src",
        "*.ttf"
      ],
      "exclude": [
        "types"
      ]
}